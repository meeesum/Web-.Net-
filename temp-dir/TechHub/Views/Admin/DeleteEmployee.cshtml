@model TechHub.Models.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>@Model.Name</h4>
    <p>Email: @Model.Email</p>
    <p>Contact: @Model.Contact</p>
</div>

<form asp-action="DeleteEmployee" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("AdminDashboard")" class="btn btn-secondary">Cancel</a>
</form>
