@model TechHub.Models.Entities.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .img-fluid {
            border-radius: 50%;
            border: 2px solid #ddd;
        }

        .container {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #343a40;
        }

        h3 {
            color: #007bff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">@ViewData["Title"]</h2>

        <div class="row">
            <div class="col-md-4 text-center">
                <div class="mb-3">

                    <img src="C:\Users\Hassan\Documents\GitHub\cs21-web-engineering-semester-project-hassan77885\TechHub\wwwroot\css\download.png" alt="@Model.Name" class="img-fluid rounded-circle" id="employeeImage" style="max-width: 300px; max-height: 300px;" />


                </div>
                <div>
                    <h4>Update Image</h4>
                    <form id="uploadImageForm" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group">
                            <label for="imageFile">Select New Image</label>
                            <input type="file" id="imageFile" name="imageFile" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Upload Image</button>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="mb-3">
                    <h3>@Model.Name</h3>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Contact:</strong> @Model.Contact</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#uploadImageForm").on("submit", function (e) {
                e.preventDefault();
                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("UploadImage", "Admin")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $("#employeeImage").attr("src", response.imagePath);
                            alert('Image updated successfully');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Error uploading image.');
                    }
                });
            });
        });
    </script>
</body>
</html>
